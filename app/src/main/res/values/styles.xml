<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="JokeCardStyle">
        <!--item name="cardBackgroundColor">?attr/colorSecondaryVariant</item-->
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_dimen</item>
        <item name="android:layout_marginVertical">@dimen/small_dimen</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:background">@drawable/textview_roundstyle</item>
        <item name="android:padding">@dimen/category_padding_dimen</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/category_height_dimen</item>
        <item name="android:layout_marginStart">@dimen/medium_dimen</item>
        <item name="android:layout_marginTop">@dimen/medium_dimen</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/button_dimen</item>
        <item name="android:layout_height">@dimen/button_dimen</item>
        <item name="android:layout_marginStart">@dimen/small_dimen</item>
        <item name="android:layout_marginTop">@dimen/small_dimen</item>
        <item name="android:layout_marginBottom">@dimen/small_dimen</item>
    </style>

    <style name="JokeTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginVertical">@dimen/small_dimen</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_dimen</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:paddingTop">@dimen/medium_dimen</item>
        <item name="android:textAlignment">center</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

</resources>